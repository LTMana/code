<view class="page">
  <view class="page__hd">
    <text class="page__title">picker</text>
    <text class="page__desc">选择器</text>
  </view>
  <view class="page__bd">
    <view class="section">
      <view class="section__title">省份选择器</view>
      <picker bindchange="bindProvinceChange" value="{{provinceIndex}}" range="{{provinceArray}}">
        <view class="picker">
          当前选择：{{provinceIndex}}:{{provinceArray[provinceIndex]}}
        </view>
      </picker>
    </view>
    
    <view class="section">
      <view class="section__title">市区选择器</view>
       <picker bindchange="bindCityChange" value="{{cityIndex}}" range="{{cityArray}}">
        <view class="picker">
          当前选择：{{cityIndex}}:{{cityArray[cityIndex]}}
        </view>
      </picker>
    </view>

    <view class="section">
      <view class="section__title">县城选择器</view>
         <picker bindchange="bindCountyChange" value="{{countyIndex}}" range="{{countyArray}}">
        <view class="picker">
          当前选择：{{countyIndex}}:{{countyArray[countyIndex]}}
        </view>
      </picker>
    </view>
  </view>
</view>
